<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="inspectIT"
            application="org.eclipse.e4.ui.workbench.swt.E4Application">
         <property
               name="appName"
               value="inspectIT">
         </property>
         <property
               name="lifeCycleURI"
               value="bundleclass://inspectIT/info.novatec.inspectit.rcp.LifecycleHook">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="info.novatec.inspectit.rcp.preferences.InspectITPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="info.novatec.inspectit.communication.data.InvocationSequenceData"
            class="inspectit.AdapterFactory1">
         <adapter
               type="inspectit.Adapter1">
         </adapter>
      </factory>
   </extension>
</plugin>
